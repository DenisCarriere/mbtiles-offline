{
  "extends": "tslint:latest",
  "rules": {
    "semicolon": [true, "never"],
    "quotemark": [true, "single"],
    "interface-name": [false],
    "variable-name": [false, "check-format"],
    "max-line-length": [true, 170],
    "arrow-parens": false,
    "no-console": [false],
    "ordered-imports": [false]
  }
}